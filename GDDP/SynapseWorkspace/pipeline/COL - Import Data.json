{
	"name": "COL - Import Data",
	"properties": {
		"activities": [
			{
				"name": "COPY - Prepare Data",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "@{'inputsfiles'}/@{'Sales'}/"
					},
					{
						"name": "Destination",
						"value": "@{'loadingfiles'}/@{'Sales'}/"
					}
				],
				"typeProperties": {
					"source": {
						"type": "BinarySource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true
						},
						"formatSettings": {
							"type": "BinaryReadSettings"
						}
					},
					"sink": {
						"type": "BinarySink",
						"storeSettings": {
							"type": "AzureBlobStorageWriteSettings"
						}
					},
					"enableStaging": false
				},
				"inputs": [
					{
						"referenceName": "BLOB_Directory",
						"type": "DatasetReference",
						"parameters": {
							"Container": "inputsfiles",
							"Directory": {
								"value": "@pipeline().parameters.Domain",
								"type": "Expression"
							}
						}
					}
				],
				"outputs": [
					{
						"referenceName": "BLOB_Directory",
						"type": "DatasetReference",
						"parameters": {
							"Container": "loadingfiles",
							"Directory": {
								"value": "@pipeline().parameters.Domain",
								"type": "Expression"
							}
						}
					}
				]
			}
		],
		"parameters": {
			"Domain": {
				"type": "string",
				"defaultValue": "Sales"
			}
		},
		"folder": {
			"name": "01 - Collection"
		},
		"annotations": [
			"Collection"
		],
		"lastPublishTime": "2021-01-10T20:26:52Z"
	},
	"type": "Microsoft.DataFactory/factories/pipelines"
}